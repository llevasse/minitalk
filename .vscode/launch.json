	"version": "0.2.0",
	"configurations": [
		{
			"name": "test server",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/server_extra",
			"args": [
				"-+0"
			],
			"cwd": ".",
			"environment": [],
			"stopAtEntry": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
							{
					"description": "ignore SIGUSR1 signal",
					"text": "handle SIGUSR1 nostop noprint pass"
				},
				{
					"description": "ignore SIGUSR2 signal",
					"text": "handle SIGUSR2 nostop noprint pass"
				}
			],
			"preLaunchTask": "debug server"
		}
	]
}